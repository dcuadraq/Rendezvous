.banner
.container
  .events
    - @events.in_groups_of(3, false) do |event_group|
      .row
        - event_group.each do |event|
          .col-md-4
            .panel.panel-default
              .panel-body
                %h5.text-center
                  %a{href: event_path(event)}
                    = event.name
